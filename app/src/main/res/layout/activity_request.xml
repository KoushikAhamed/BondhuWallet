<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestActivity"
    android:orientation="vertical"
    android:background="@color/payactivityBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorWhite"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_back"
                    android:background="@android:color/transparent"
                    android:onClick="requestActivityBack"/>
                <TextView
                    android:layout_width="85sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorPaysend"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="160sp"
                android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/Receive_qr"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="receiveQRCode"
                    android:text="Receive           From                      QR Code"
                    android:textColor="@color/colorWhite" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="476dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.SearchView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search From Contact">

                    </android.support.v7.widget.SearchView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.SearchView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search From Application"></android.support.v7.widget.SearchView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="67dp"
                        android:layout_height="50dp" />

                    <EditText
                        android:id="@+id/editRequestText3"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:background="@color/colorWhite"
                        android:ems="10"
                        android:hint="Amount"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="342dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="116dp"
                        android:layout_height="50dp" />

                    <Button
                        android:id="@+id/buttonRequest"
                        android:layout_width="123dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_button"
                        android:onClick="requestSuccess"
                        android:text="Receive"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="130dp"
                        tools:layout_editor_absoluteY="505dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </LinearLayout>


</LinearLayout>