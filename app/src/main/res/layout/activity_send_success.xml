<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendSuccessActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorWhite"
                    app:popupTheme="@style/AppTheme.PopupOverlay">
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_action_back"
                        android:background="@android:color/transparent"
                        android:onClick="paySuccessActivityBack"/>
                    <TextView
                        android:layout_width="65sp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="200sp"
                        android:layout_height="match_parent"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorPaysend"/>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="230sp"
            android:layout_height="40sp"
            android:text="Successfully Send"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="113dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/viewfinder_border"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/success"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/succ"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>